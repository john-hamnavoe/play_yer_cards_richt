  <%= render 'shared/play_header', game: @game %>
<div class="card shadow p-2">
  <h2>Pin: <%= @game.pin %></h2>

  <h2>Question:<h2>
  <h1 class="text-primary"><%= @game.current_game_question.question.question %></h2>

  <h2>Answer:<h2>
  <h1 class="text-secondary"><%= @game.current_game_question.question.answer %></h1>
  <br>
  <br>
  <h2>Table:</h2>
  <table class="table">
    <tr>
      <th>Team Name</th>
      <th>Answer</th>
      <th>Difference</th>
      <th>Time</th>
    </tr>
    <% @game_player_question_answers.each do |gpqa| %>
      <tr>
        <th><%= gpqa.game_player.user.team_name %></th>
        <td class="text-secondary"><%= gpqa.answer %></td>
        <td class="text-danger"><%=  @game.current_game_question.question.answer - gpqa.answer if gpqa.answer %></td>
        <td><%= gpqa.updated_at %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to "Play Bonus Round", episodes_host_bonus_episode_path(@game.id), class: "btn btn-success"%>
</div>
